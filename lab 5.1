#include <stdio.h>

int main() {
    int n;
    
    // Запит на введення кількості елементів масиву
    printf("Введіть кількість елементів масиву: ");
    scanf("%d", &n);
    
    if (n < 3) {
        printf("Кількість елементів має бути не менше 3.\n");
        return 1; // Завершити програму з помилкою
    }

    double a[n]; // Масив для зберігання дійсних чисел

    // Введення елементів масиву
    printf("Введіть %d дійсних чисел:\n", n);
    for (int i = 0; i < n; i++) {
        scanf("%lf", &a[i]);
    }

    // Змінні для зберігання трьох найбільших чисел
    double first = a[0], second = a[0], third = a[0];

    // Знаходження трьох найбільших чисел
    for (int i = 0; i < n; i++) {
        if (a[i] > first) {
            third = second;
            second = first;
            first = a[i];
        } else if (a[i] > second) {
            third = second;
            second = a[i];
        } else if (a[i] > third) {
            third = a[i];
        }
    }

    // Обчислення суми трьох найбільших чисел
    double sum = first + second + third;

    // Виведення результату
    printf("Сума трьох найбільших чисел: %.2lf\n", sum);

    return 0;
}
