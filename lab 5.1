#include <stdio.h>

void findThreeLargestSum(double arr[], int n) {
    if (n < 3) {
        printf("Недостатньо елементів у масиві для обчислення суми трьох найбільших чисел.\n");
        return;
    }

    double first, second, third;
    first = second = third = -1.0 / 0.0; // Мінус безкінечність

    for (int i = 0; i < n; i++) {
        if (arr[i] > first) {
            third = second;
            second = first;
            first = arr[i];
        } else if (arr[i] > second) {
            third = second;
            second = arr[i];
        } else if (arr[i] > third) {
            third = arr[i];
        }
    }

    double sum = first + second + third;
    printf("Сума трьох найбільших чисел: %.2f\n", sum);
}

int main() {
    int n;
    
    printf("Введіть кількість елементів масиву: ");
    scanf("%d", &n);

    double arr[n];

    printf("Введіть %d дійсних чисел:\n", n);
    for (int i = 0; i < n; i++) {
        printf("a[%d]: ", i);
        scanf("%lf", &arr[i]);
    }

    int choice;
    do {
        printf("\nМеню:\n");
        printf("1. Знайти суму трьох найбільших чисел\n");
        printf("2. Вийти\n");
        printf("Виберіть опцію: ");
        scanf("%d", &choice);

        switch (choice) {
            case 1:
                findThreeLargestSum(arr, n);
                break;
            case 2:
                printf("Вихід з програми.\n");
                break;
            default:
                printf("Невірний вибір. Спробуйте ще раз.\n");
        }
    } while (choice != 2);

    return 0;
}
